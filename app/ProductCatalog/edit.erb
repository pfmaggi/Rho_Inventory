<div class="container">
  <h2>Edit <%= @productcatalog.Name %></h2>
  <a href="<%= url_for :action => :show, :id => @productcatalog.object %>" class="btn btn-primary"><i class="glyphicon glyphicon-arrow-left" ></i>&nbsp Cancel</a>
  <a href="<%= url_for :action => :delete, :id => @productcatalog.object %>" class="btn btn-primary"><i class="glyphicon glyphicon-remove" ></i>&nbsp Delete</a>

  <form method="POST" action="<%= url_for :action => :update %>">
    <input type="hidden" name="id" value="<%= @productcatalog.object %>"/>
    <div class="form-group">
      <label class="control-label" for="productcatalog[Name]">Name</label>
      <div class="controls">
        <input type="text" id="productcatalog[Name]" name="productcatalog[Name]" value="<%= @productcatalog.Name %>" <%= placeholder("Name") %> />
      </div>
    </div>
      
    <div class="form-group">
      <label class="control-label" for="productcatalog[SKU]">Sku</label>
      <div class="controls">
        <input type="text" id="productcatalog[SKU]" name="productcatalog[SKU]" value="<%= @productcatalog.SKU %>" <%= placeholder("Sku") %> />
      </div>
    </div>
    <input type="submit" value="Update" class="btn  btn-success"/>  
  </form>
</div>
