<div class="container">
  <h2>New</h2>

  <form method="POST" action="<%= url_for :action => :create %>">
    <input type="hidden" name="id" value="<%= @inventory.object %>"/>

    <div class="form-group">
      <label class="control-label" for="inventory[SKU]">SKU</label>
      <div class="controls">
        <input type="text" id="inventory[SKU]" name="inventory[SKU]" <%= placeholder("SKU") %> />
      </div>
    </div>
    
        
    <div class="form-group">
      <label class="control-label" for="inventory[Quantity]">Quantity</label>
      <div class="controls">
        <input type="number" id="inventory[Quantity]" name="inventory[Quantity]" <%= placeholder("Quantity") %> />
      </div>
    </div>
    

    <div>
      <a href="<%= url_for :action => :index %>" class="btn  btn-default "><i class="glyphicon glyphicon-arrow-left" ></i>  Cancel</a>
      <input type="submit" value="Create" class="btn  btn-success"/>  
    </div>          
  </form>
</div>
