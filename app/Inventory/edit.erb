<div class="container">
  <h2>Edit <%= @inventory.SKU %></h2>
  <a href="<%= url_for :action => :show, :id => @inventory.object %>" class="btn btn-primary"><i class="glyphicon glyphicon-arrow-left" ></i>&nbsp Cancel</a>
  <a href="<%= url_for :action => :delete, :id => @inventory.object %>" class="btn btn-primary"><i class="glyphicon glyphicon-remove" ></i>&nbsp Delete</a>

  <form method="POST" action="<%= url_for :action => :update %>">
    <input type="hidden" name="id" value="<%= @inventory.object %>"/>
    <div class="form-group">
      <label class="control-label" for="inventory[SKU]">SKU</label>
      <div class="controls">
        <input type="text" id="inventory[SKU]" name="inventory[SKU]" value="<%= @inventory.SKU %>" <%= placeholder("SKU") %> />
      </div>
    </div>
      
    <div class="form-group">
      <label class="control-label" for="inventory[Quantity]">Quantity</label>
      <div class="controls">
        <input type="text" id="inventory[Quantity]" name="inventory[Quantity]" value="<%= @inventory.Quantity %>" <%= placeholder("Quantity") %> />
      </div>
    </div>
    <input type="submit" value="Update" class="btn  btn-success"/>  
  </form>
</div>
